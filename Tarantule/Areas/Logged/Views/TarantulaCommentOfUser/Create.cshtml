@model DataAccess.Model.TarantuleCommentOfUser
@{
    ViewBag.Title = "Create";
}

<h1 style="color:#333;font-family: Courier New, monospace;font-size: 32px;">Přidat komentář</h1>

@Html.ValidationSummary()


@using (Html.BeginForm("Add", "TarantulaCommentOfUser", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data"}))
{
    TempData["Data1"] = ViewBag.Id;

    <div class="form-group">
        <label class="col-sm-2 control-label">Přezdívka</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Komentář</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control formatedtext" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Přidat komentář</button>
        </div>
    </div>

}