@model DataAccess.Model.TarantuleOfUser
@{
    ViewBag.Title = "Edit";
}

<h1 class="text-center" style="color:#333;font-family: Courier New, monospace;font-size: 32px;">@Model.Name - Editace záznamu sklípkana</h1>

@Html.ValidationSummary()

@using (Html.BeginForm("Update", "TarantulaOfUser", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id)
    TempData["Data1"] = ViewBag.User;
    TempData["ImageName"] = ViewBag.imageName;

    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-3 control-label">Název sklípkana</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-3 control-label">Přezdívka sklípkana</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Nickname, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Nickname)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-3 control-label">Obrazek</label>
        <div class="col-sm-10">
            <input type="file" name="picture" />
            @if (!string.IsNullOrEmpty(Model.ImageName))
            {
                <img src="@Url.Content("~/uploads/tarantule/" + Model.ImageName)" />
            }
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-3 control-label">Popis</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control formatedtext" })
            @Html.ValidationMessageFor(x => x.Description)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-10">
            <button type="submit" class="btn btn-primary">Upravit záznam sklípkana</button>
        </div>
    </div>

}

<strong>
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
</strong>
<script>
    tinymce.init({
        selector: "#mytextarea"
    });
</script>

