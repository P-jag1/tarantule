@model DataAccess.Model.TarantuleSell
@{
    ViewBag.Title = "Edit";
}

<h1 class="text-center" style="color:#333;font-family: Courier New, monospace;font-size: 32px;">Upravit prodej sklípkana - @Model.Name</h1>

@Html.ValidationSummary()

@using (Html.BeginForm("Update", "TarantulaSell", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data"}))
{
    @Html.HiddenFor(x => x.Id)
    TempData["Data1"] = ViewBag.User;
    TempData["ImageName"] = ViewBag.imageName;

    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-3 control-label">Název sklípkana</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-3 control-label">Cena sklípkana</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Price)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-3 control-label">Obrazek</label>
        <div class="col-sm-10">
            <input type="file" name="picture" />
            @if (!string.IsNullOrEmpty(Model.ImageName))
            {
                <img src="@Url.Content("~/uploads/tarantule/" + Model.ImageName)" />
            }
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-3 control-label">Popis</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control formatedtext" })
            @Html.ValidationMessageFor(x => x.Description)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-10">
            <button type="submit" class="btn btn-primary">Upravit prodej sklípkana</button>
        </div>
    </div>

}

<script src="//tinymce.cachefly.net/4.1/tinymce.min.js"></script>
<script>tinymce.init({ selector: '.formatedtext' });</script>

