@using DataAccess.Model
@model IList<TarantuleSell>


@{
    ViewBag.Title = "UserIndex";
}

<h1 class="text-center" style="color:#333;font-family: Courier New, monospace;font-size: 32px;">Můj Prodej</h1>




<div class="clearfix"></div>

<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th>Obrázek</th>
            <th>Název</th>
            <th>Cena</th>
            <th>Více o prodeji</th>
            <th>Upravit</th>
            <th>Smazat</th>

        </tr>
    </thead>
    <tbody>
        @foreach (TarantuleSell tar in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(tar.ImageName))
                    {
                        <img src="@Url.Content("~/uploads/tarantule/" + tar.ImageName)" />
                    }
                </td>
                <td>@tar.Name</td>
                <td>@tar.Price ,-</td>
                <td><p style="font-size:160%;">@Html.ActionLink("Více", "Detail", "TarantulaSell", new { id = tar.Id, zobrazPopis = true }, new { title = tar.Name })</p></td>
                <td><p style="font-size:160%;">@Html.ActionLink("Edit", "Edit", "TarantulaSell", new { id = tar.Id }, null)</p></td>
                <td><p style="font-size:160%;">@Html.ActionLink("Delete", "Delete", "TarantulaSell", new { id = tar.Id }, new { onclick = "return confirm('Přejete si smazat záznam o prodeji " + tar.Name + "?');" })</p></td>
            </tr>
        }
    </tbody>
</table>

<div class="btn-toolbar">
    <a href="@Url.Action("Create", "TarantulaSell")" class="btn btn-primary pull-right">Vytvoření nového záznamu</a>
</div>

@if (ViewBag.Pages != null)
{
    <div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.Pages; i++)
        {
            <li class="@(ViewBag.CurrentPage == i ? "active" : "")"><a href="@Url.Action("UserIndex", "TarantulaSell", new {page = i})"> @i </a></li>
        }
    </ul>
    </div>
}


