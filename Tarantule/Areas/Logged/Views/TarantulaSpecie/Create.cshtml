@model DataAccess.Model.TarantuleSpecie
@{
    ViewBag.Title = "Create";
}

<h1 class="text-center" style="color:#333;font-family: Courier New, monospace;font-size: 32px;">Nový druh sklípkana</h1>


@Html.ValidationSummary()

@using (Html.BeginForm("Add", "TarantulaSpecie", FormMethod.Post, new {@class = "form-horizontal", enctype="multipart/form-data"}))
{
    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-3 control-label">Název druhu</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Name, new{@class="form-control"})
            @Html.ValidationMessageFor(x=>x.Name)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-3 control-label">Latinský název</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.LatinName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.LatinName)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-3 control-label">Země původu</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Country)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-3 control-label">Průměrná Délka života</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.SpanOfLife, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.SpanOfLife)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-3 control-label">Velikost v cm</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Size, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Size)          
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-3 control-label">Obrazek</label>
        <div class="col-sm-10">
            <input type="file" name="picture" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-offset-3 control-label">Popis</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control formatedtext" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-10">
            <button type="submit" class="btn btn-primary">Vytvořit nového sklípkana</button>
        </div>
    </div>

}

<strong>
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
</strong>
<script>
    tinymce.init({
        selector: "#mytextarea"
    });
</script>